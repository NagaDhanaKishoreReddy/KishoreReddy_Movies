<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_464646">

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/size_16dp"
    app:cardCornerRadius="@dimen/size_10dp"
    app:cardElevation="@dimen/size_16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="@dimen/size_16dp"
        android:padding="@dimen/size_12dp"
        android:background="@drawable/screen1">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/item_desc"
            android:textColor="@color/white"
            android:textSize="@dimen/size_16sp"
            android:layout_marginBottom="@dimen/size_24dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/tvChannelType"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvChannelType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_channel_type"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/size_16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_channel_type"
            android:textColor="@color/white"
            android:textSize="@dimen/size_16sp"
            android:layout_marginLeft="@dimen/size_16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvChannelType"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
